<?xml version="1.0" encoding="utf-8"?>
<ClickableControl xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd"
				  name="clickable" width="wrap" height="wrap">
	<ControlGroup width="wrap" height="wrap">
		<Shadow width="Parent.Width" height="Parent.Height"
				name="shadow"
				style="theme://style/Shadow_button"
				shape="roundRect, 2"/>
		<Clip shape="roundRect, 2"
			  name="clip"
			  width="wrap" height="wrap">
			<ControlGroup width="wrap" height="wrap">
				<ColorView width="Parent.Width" height="Parent.Height"
						   style="theme://style/ColorView_control"
						   name="background"/>
				<StateIndicator name="state" width="Parent.Width" height="Parent.Height"
								style="theme://style/StateIndicator_onBackground"/>
				<PaddingContainer padding="8, 4"
								  width="wrap" height="wrap"
								  name="padding">
					<ControlContainer width="wrap" height="wrap"
									  name="content"/>
				</PaddingContainer>
			</ControlGroup>
		</Clip>
	</ControlGroup>
</ClickableControl>
