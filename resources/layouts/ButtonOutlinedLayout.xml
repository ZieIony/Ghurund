		<ControlGroup.Width path="wrap" offset="8"/>
		<ControlGroup.Height path="wrap" offset="4"/>
		<ClickableControl width="Parent.Width" height="Parent.Height" name="clickable"/>
		<ColorView style="theme://style/ColorView_background"
			   width="Parent.Width" height="Parent.Height"/>
		<StateIndicator name="state"
						width="Parent.Width" height="Parent.Height"
						style="theme://style/StateIndicator_onBackground"/>
		<ControlContainer name="container">
			<ControlContainer.Left path="Parent.Left" offset="8"/>
			<ControlContainer.Top path="Parent.Top" offset="4"/>
		</ControlContainer>
		<Border width="Parent.Width" height="Parent.Height"
					style="theme://style/Border_onBackground"
					shape="roundRect, 2"/>
	</ControlGroup>
</Clip>
