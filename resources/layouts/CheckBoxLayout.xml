<?xml version="1.0" encoding="utf-8"?>
<ControlContainer xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd">
	<SelectableView name="selectable" width="wrap" height="wrap">
		<ControlGroup alignment="center, center"
					  orientation="horizontal">
			<ControlGroup alignment="center, center" width="18" height="18">
				<PaddingContainer padding="-4"  width="Parent.Width" height="Parent.Height">
					<Clip shape="roundRect, 2">
						<StateIndicator name="state" width="Parent.Width" height="Parent.Height"
										style="theme://style/StateIndicator_onBackground"/>
					</Clip>
				</PaddingContainer>
				<ImageView name="image"
						   image="theme://image/checkBox_checked"/>
			</ControlGroup>
			<Space width="4" height="4"/>
			<ControlContainer width="Parent.Width" height="wrap"
							  name="content"/>
		</ControlGroup>
	</SelectableView>
</ControlContainer>