<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd" namespace="Preview">
	<StackLayout alignment="left, bottom">
		<StackLayout name="container"
					 alignment="center, center"/>
		<PaddingContainer padding="8, 4"
						  preferredSize="fill, wrap">
			<LinearLayout orientation="vertical"
						  preferredSize="fill, wrap">
				<LinearLayout orientation="horizontal">
					<PaddingContainer padding="0,4,4,4">
						<Button layout="file://~/layouts/ButtonImageLayout.xml"
								name="color1">
							<ColorView color="#ffd32f2f"
									   preferredSize="24,24"/>
						</Button>
					</PaddingContainer>
					<PaddingContainer padding="4">
						<Button layout="file://~/layouts/ButtonImageLayout.xml"
								name="color2">
							<ColorView color="#ff1976d2"
									   preferredSize="24,24"/>
						</Button>
					</PaddingContainer>
					<PaddingContainer padding="4">
						<Button layout="file://~/layouts/ButtonImageLayout.xml"
								name="color3">
							<ColorView color="#ffffa000"
									   preferredSize="24,24"/>
						</Button>
					</PaddingContainer>
					<PaddingContainer padding="4">
						<Button layout="file://~/layouts/ButtonImageLayout.xml"
								name="color4">
							<ColorView color="#ff388e3c"
									   preferredSize="24,24"/>
						</Button>
					</PaddingContainer>
				</LinearLayout>
				<Space preferredSize="4,4"/>
				<CheckBox checked="true"
						   name="enabledCheckBox">
					<TextBlock text="enabled"/>
				</CheckBox>
				<Space preferredSize="4,4"/>
				<CheckBox name="themeCheckBox">
					<TextBlock text="dark theme"/>
				</CheckBox>
				<Space preferredSize="4,4"/>
				<TextBlock text="drop a file here to open"
						   preferredSize="wrap, wrap"
						   style="theme://style/TextBlock_secondary"/>
			</LinearLayout>
		</PaddingContainer>
	</StackLayout>
</layout>