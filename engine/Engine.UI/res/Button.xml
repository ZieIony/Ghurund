<?xml version="1.0" encoding="utf-8"?>
<ClickableControl xmlns="https://github.com/Zielony/Ghurund/Engine/UISchema.xsd" namespace="Ghurund::UI"
				  name="clickable" width="wrap" height="wrap">
	<Clip shape="roundRect, 2" width="Parent.Width" height="Parent.Height">
		<ControlGroup width="Parent.Width" height="Parent.Height">
			<StateIndicator name="state" width="Parent.Width" height="Parent.Height"
							style="theme://style\stateIndicator_onBackground"/>
			<ControlContainer width="wrap" height="wrap"
							  name="content"/>
		</ControlGroup>
	</Clip>
</ClickableControl>
